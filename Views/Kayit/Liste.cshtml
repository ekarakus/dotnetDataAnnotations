@model List<Ogrenci>
    <h1>Öğrenciler</h1>
    
    <form>
        <div class="row">
        <div class="col-9">
            <input name="isim" 
            placeholder="isim giriniz" 
            value='@Context.Request.Query["isim"]'
            class="form-control"/>
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-success" style="width: 100%;">Ara</button>
        </div>
    </div>
    </form>
@if(Model.Count>0){

     <table class="table table-border"> 
         <thead>
             <th>No#</th>
             <th>Ad</th>
             <th>Soyad</th>
             <th>Ortalama</th>
             <th></th>
         </thead>
         <tbody>
    @foreach (Ogrenci kayit in Model)
    {
       
        <tr>
<td>@kayit.okulNumarasi </td>
            <td>@kayit.ad </td>
            <td> @kayit.soyad </td>
            <td> @kayit.notOrtalamasi</td>
            <td>
                <a asp-action="Sil" asp-controller="Kayit"
                asp-route-no="@kayit.okulNumarasi" >
                    Sil
                </a>
            </td>
        </tr>
      
    }
    </tbody>  
    </table>
} else{
    <div class="m-5 alert alert-warning">Öğrenci bulunamadı</div>
}